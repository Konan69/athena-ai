{
  "name": "@athena-ai/root",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@tailwindcss/oxide",
      "esbuild",
      "protobufjs"
    ]
  },
  "scripts": {
    "prepare": "echo 'add husky'",
    "dev": "turbo run dev db:studio --parallel",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:client": "turbo -F @athena-ai/client dev",
    "dev:server": "turbo -F @athena-ai/server dev",
    "dev:db-studio": "turbo run db:studio --filter=@athena-ai/server",
    "dev:mastra": "turbo run -F @athena-ai/mastra"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.5",
    "ultracite": "5.3.2"
  }
}
