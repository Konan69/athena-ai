{
  "name": "athena-ai",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install && cd client && pnpm install && cd ../server && bun install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && pnpm dev",
    "dev:server": "cd server && bun dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
